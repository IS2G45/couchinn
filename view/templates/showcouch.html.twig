{% extends "layout.html.twig" %}

{% block otherStylesheet  %}
    <link rel="stylesheet" href="{{ constant('PATH_URL_CSS') }}index.css" type="text/css" />
    <link rel="stylesheet" href="{{ constant('PATH_URL_CSS') }}showCouch.css" type="text/css" />
    <link rel="stylesheet" href="{{ constant('PATH_URL_CSS') }}searcher.css" type="text/css" />
{% endblock %}

{% block otherJavascripts %}
    <script src="{{ constant('PATH_URL_VENDOR') }}twbs/bootstrap/js/carousel.js"></script>
{% endblock %}

{% block container %}
    {% include 'searcher.html.twig' %}
    <div id="couchinnsContainer" class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="col-md-9">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"></h3>
                    </div>
                    <div class="panel-body">
                        <div class="page-header">
                            <h1>Couch <small>- detalle</small></h1>
                        </div>
                        <form id="couchNewForm" class="form-horizontal">
                            <div class="row">
                                <div class="col-md-7">
                                    <div class="form-group form-group-lg">
                                        <label for="newCouchTipo" class="col-md-3 control-label ">TÃ­tulo</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">{{ titulo | capitalize}}</p>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-lg">
                                        <label for="newCouchTipo" class="col-md-3 control-label ">Tipo</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">{{ tipo | capitalize}}</p>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-lg">
                                        <label for="newCouchCapacidad" class="col-md-3 control-label">Capacidad</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">{{ capacidad }}</p>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-lg">
                                        <label for="newCouchLugar" class="col-md-3 control-label">Lugar</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">{{ ciudad | capitalize}} - {{ provincia | title}}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div id="imagePreview" class="col-md-12" data-toggle="tooltip" data-placement="left" title="Agregar Foto...">
                                        <img  src="data:image/png;base64,{{foto}}"/>
                                    </div>
                                </div>

                            </div> 

                            <div class="row">
                                <div class="form-group form-group-lg">
                                    <label for="newCouchDescripcion" class="col-md-2 control-label">Descripci&oacute;n</label>
                                    <div class="col-md-10">
                                        <p class="form-control-static">{{ descripcion | capitalize }}</p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">
                    </div>
                </div>
            </div>

            <div class="col-md-3 containerPublicidad">
                {% include  "publicidad_4.html.twig" %}
            </div>
        </div>
    </div>
{% endblock %}